
<div class="container  mx-auto" style="width:25em">
    <div class="card border-1 shadow-sm">
        <div class="card-header text-center">
            <h4 class="text-center">Michaels Insurance Company</h4>
        </div>
        <div class="card-body">

            @using (Html.BeginForm("GetQuote", "Home", FormMethod.Post))
            {
                <div class="m-auto">
                    <div class="row">
                        <div class="form-group mx-auto w-75 ">
                            <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group mx-auto w-75">
                            <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group mx-auto w-75">
                            <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group mx-auto w-75">
                            <input name="DOB" type="text" class="form-control" placeholder="Date of Birth - YYYY/MM/DD" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group mx-auto w-75">
                            <input name="CarMake" type="text" class="form-control" placeholder="Vehicle Make" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group mx-auto w-75">
                            <input name="CarModel" type="text" class="form-control" placeholder="Vehicle Model" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group mx-auto w-75">
                            <input name="CarYear" type="text" class="form-control" placeholder="Vehicle year of production - YYYY" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group mx-auto w-75">
                            <h5>Have you have any DUI?</h5>
                            <label class="btn btn-secondary ">
                                <input type="radio" name="DUI" value="Yes" autocomplete="off"> Yes
                            </label>
                            <label class="btn btn-secondary">
                                <input type="radio" name="DUI" value="No" autocomplete="off"> No
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group mx-auto w-75">
                            <input name="speedingTickets" type="text" class="form-control" placeholder="Number of Speeding tickets." />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group mx-auto w-75">
                            <h5>What type of coverage would you prefer?</h5>
                            <label class="btn  w-50 btn-secondary ">
                                <input type="radio" name="coverage" value="FullCoverage" autocomplete="off"> Full Coverage

                            </label>
                            <label class="btn  w-50 btn-secondary">
                                <input type="radio" name="coverage" value="Liability" autocomplete="off"> Liability
                            </label>
                        </div>
                    </div>
                    <div class="mx-auto w-75">
                        <button type="submit" class="btn btn-block btn-success ">Get A Quote</button>
                    </div>
                </div>
            }


        </div>
    </div>
</div>